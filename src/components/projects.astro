<a name="projects"></a>
<div class="pt-16 pb-8 md:pb-18">
  <h2 class="font-syne text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Projects
  </h2>
</div>
<a name="dev"></a>
<p class="font-inter text-2xl font-bold text-slate-600">Web Development</p>
<div class="grid sm:grid-cols-1 md:grid-cols-2 mt-4 gap-16 gap-y-12 lg:gap-y-24">
    {
      devProjects.map((item) => (
        <div class="flex flex-col gap-4 items-start">
          <div class="mt-1 min-w-full">
            <img class="min-w-full" src={item.image} />
          </div>
          <div>
            <h3 class="font-syne font-semibold text-lg">{item.title}</h3>
            <p class="text-lg mt-2 text-slate-600">{item.description}</p>
            <Link href={item.link}
        size="lg"
        style="outline"
        rel="noopener"
        class="font-sans mt-6 flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bx-code-alt" />
        View Project
